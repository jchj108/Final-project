<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>

	<typeAliases>
		<typeAlias type="com.kh.workhome.employee.model.vo.Employee" alias="Employee"/>
		<typeAlias type="com.kh.workhome.employee.model.vo.Department" alias="Department"/>
		<typeAlias type="com.kh.workhome.mail.model.vo.Mail" alias="Mail"/>
		<typeAlias type="com.kh.workhome.mail.model.vo.MailFile" alias="MailFile"/>
		<typeAlias type="com.kh.workhome.todo.model.vo.ToDo" alias="Todo"/>
		<typeAlias type="com.kh.workhome.approval.model.vo.Approval" alias="Approval"/>
		<typeAlias type="com.kh.workhome.notice.model.vo.Notice" alias="Notice"/>
	</typeAliases>

	<mappers>
		<mapper resource="mapper/employee-mapper.xml"/>
		<mapper resource="mapper/mail-mapper.xml"/>
		<mapper resource="mapper/todo-mapper.xml"/>
		<mapper resource="mapper/approval-mapper.xml"/>
		<mapper resource="mapper/notice-mapper.xml"/>
	</mappers>
</configuration>
